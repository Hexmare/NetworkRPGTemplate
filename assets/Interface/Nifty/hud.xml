    <controlDefinition name="chatArea" controller="NetworkRpg.NIFTYControllers.ChatAreaController">
        <panel childLayout="center" width="$width" height="$height">
            <control name="scrollPanel" id="scroll_panel" width="100%" height="100%" horizontal="$horizontal" vertical="$vertical" autoScroll="$autoScroll">
