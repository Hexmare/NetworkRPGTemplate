<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<nifty>
    <useStyles filename="nifty-default-styles.xml"/>
    <useControls filename="nifty-default-controls.xml"/>
    
    <screen controller="NetworkRpg.GameGuiController" id="start">
        <layer childLayout="center" height="100px" id="layer0" >
            <control name="button" label="Start" id="StartButton" align="center" valign="center"> 
                <interact onClick="startGame()" />
            </control>
        </layer>
    </screen>
    
    <screen controller="NetworkRpg.GameGuiController" id="gameHud"
            inputMapping="de.lessvoid.nifty.input.mapping.MenuInputMapping"
    >
        <layer childLayout="center" height="100%" width="100%" id="crossHairs">
            <text text="+" 
                  font="Interface/Fonts/Default.fnt" color="red" width="100%" height="100%" wrap="true" />
        </layer>
        <layer childLayout="center"  id="chatLayer"> 
            
                <control name="chatControlDialogControl" height="100%" width="100%" id="ChatControl" />
            
        </layer>
        <layer childLayout="horizontal" height="90%" width="90%" id="layer1" >
            <panel id="blue" backgroundColor="#00f8" width="40px" height = "80px" alight="right"></panel>
            
        </layer>
        <layer childLayout="center" height="100px" id="layer0" >
            
            
            <panel id="red" backgroundColor="#f008" width="640" height="75px" align="center" valign="bottom" childLayout="horizontal" margin="10px">
                <image childLayout="center" filename="Textures/icons/sword.png"  height="64px" width="64px" visibleToMouse="true" id="B1">
                    <interact onClick="onClick()" />
                    <image filename="Textures/icons/littleSword.png"  height="32px" width="32px" visibleToMouse="true" id="B1a"/>
                </image>  
                <image filename="Textures/icons/sword.png"  height="64px" width="64px" visibleToMouse="true" id="B2">
                    <interact onClick="onClick()" />
                </image>  
                <image filename="Textures/icons/sword.png"  height="64px" width="64px" visibleToMouse="true" id="B3">
                    <interact onClick="onClick()" />
                </image>  
                <image filename="Textures/icons/sword.png"  height="64px" width="64px" visibleToMouse="true" id="B4">
                    <interact onClick="onClick()" />
                </image>  
                <image filename="Textures/icons/sword.png"  height="64px" width="64px" visibleToMouse="true" id="B5">
                    <interact onClick="onClick()" />
                </image>  
                <image filename="Textures/icons/sword.png"  height="64px" width="64px" visibleToMouse="true" id="B6">
                    <interact onClick="onClick()" />
                </image>  
                <image filename="Textures/icons/sword.png"  height="64px" width="64px" visibleToMouse="true" id="B7">
                    <interact onClick="onClick()" />
                </image>  
                <image filename="Textures/icons/sword.png"  height="64px" width="64px" visibleToMouse="true" id="B8">
                    <interact onClick="onClick()" />
                </image>  
                <image filename="Textures/icons/sword.png"  height="64px" width="64px" visibleToMouse="true" id="B9">
                    <interact onClick="onClick()" />
                </image>  
                <image filename="Textures/icons/sword.png"  height="64px" width="64px" visibleToMouse="true" id="B0">
                    <interact onClick="toggleCrosshairs()" />
                </image>  
            </panel>
        </layer>
    </screen>
</nifty>
